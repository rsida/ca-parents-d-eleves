{% extends 'base.html.twig' %}

{% block title %}{{ 'user.create.title'|trans }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}

        <button type="submit">{{ 'user.create.submit_button'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
