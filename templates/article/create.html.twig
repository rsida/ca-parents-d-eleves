{% extends 'base.html.twig' %}

{% block title %}{{ 'article.create.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <h1>{{ 'article.create.title'|trans }}</h1>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title, 'article.create.field.title'|trans, {attr: {class: 'form-label'}}) }}
                    {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, 'article.create.field.description'|trans, {attr: {class: 'form-label'}}) }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.medias, 'article.create.field.medias'|trans, {attr: {class: 'form-label'}}) }}
                    {{ form_widget(form.medias, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">{{ 'article.create'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
