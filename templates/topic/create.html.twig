{% extends 'base.html.twig' %}

{% block title %}{{ 'topic.create.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <h1>{{ 'topic.create.title'|trans }}</h1>

            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.title, 'topic.create.field.title'|trans, {attr: {class: 'form-label'}}) }}
                {{ form_widget(form.title, {attr: {class: 'form-control'}}) }}
            </div>
            {% for formPost in form.posts %}
            <div class="mb-3">
                {{ form_label(formPost.content, 'topic.create.field.content'|trans, {attr: {class: 'form-label'}}) }}
                {{ form_widget(formPost.content, {required: false, attr: {class: 'tiny-mce-textarea form-control'}}) }}
            </div>
            {% endfor %}
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">{{ 'topic.create'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
