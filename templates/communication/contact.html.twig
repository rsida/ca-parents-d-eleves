{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <h1>{{ 'contact.title'|trans }}</h1>

            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.fromEmail, 'contact.form.from.email.field'|trans, {attr: {class: 'form-label'}}) }}
                {{ form_widget(form.fromEmail, {attr: {class: 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.content, 'contact.form.content.field'|trans, {attr: {class: 'form-label'}}) }}
                {{ form_widget(form.content, {attr: {class: 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">{{ 'contact.form.submit'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
